{
  "manifest_version": 3,
  "name": "MEMETRACKERPRO",
  "version": "1.0",
  "description": "Track X posts from accounts with 2k+ followers and top 50 accounts with user and keyword filters.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}
